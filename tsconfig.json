{
  "extends": "expo-module-scripts/tsconfig.base",
  "compilerOptions": {
    "outDir": "./build",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "experimentalDecorators": true,
    "noUnusedLocals": false,
    "jsx": "react-jsx"
  },
  "include": ["./src", "types", "index.ts", "image/fast", "image/context.tsx", "image/create-solito-image.tsx", "image/default-loader.ts", "image/helpers.test.ts", "image/helpers.ts", "image/image.types.ts", "image/types.ts", "image/use-solito-image.ts", "image/expo", "image/author"],
  "exclude": ["**/__mocks__/*", "**/__tests__/*", "**.*.test.ts"],
  "ts-node": {
    // these options are overrides used only by ts-node
    "compilerOptions": {
      "module": "CommonJS",
      "lib": ["ESNext"],
      "types": ["node"],
      "target": "ESNext"
    }
  }
}
